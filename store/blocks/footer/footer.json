{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#footer-1-desktop"
    ],
    "props": {
      "blockClass": "newsletter-row"
    }
  },
  "flex-layout.col#footer-1-desktop":{
    "children": [
      "rich-text#title-newsletter",
      "newsletter-form"
    ],
    "props": {
      "blockClass": "newsletter-row"
    }
  },
  "rich-text#title-newsletter":{
    "props": {
      "text": "#### Se inscreva e fique por dentro das nossas novidades",
      "blockClass":"title-newsletter"
    }
  },
  "newsletter-form": {
    "children": [
      "newsletter-input-name",
      "newsletter-input-email",
      "newsletter-submit"
    ]
  },
  "newsletter-input-name":{
    "props": {
      "placeholderText": "Seu nome"
    }
  },
  "newsletter-input-email":{
    "props": {
      "placeholderText": "Seu email"
    }
  },
  "newsletter-submit":{
    "props": {
      "submitButtonLabel": "Enviar"
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.col#footer-2-desktop-1",
      "flex-layout.col#footer-2-desktop-2",
      "flex-layout.col#footer-2-desktop-3",
      "flex-layout.col#footer-2-desktop-4",
      "flex-layout.col#footer-2-desktop-5",
      "flex-layout.col#footer-2-desktop-6"
    ],
    "props": {
      "blockClass": "footer-2-desktop",
      "colSizing": "auto"
    }
  },
  "flex-layout.col#footer-2-desktop-1":{
    "children": [
      "rich-text#title-footer-1",
      "vtex.menu@2.x:menu#institucional",
      "flex-layout.row#footer-2-desktop-1"
    ],
    "props": {
      "blockClass":"footer-2-desktop"
    }
  },
  "rich-text#title-footer-1":{
    "props": {
      "text": "Institucional",
      "blockClass":"title-footer"
    }
  },
  "flex-layout.row#footer-2-desktop-1":{
    "children": [
      "image#footer-facebook",
      "image#footer-instagram"
    ],
    "props": {
      "colSizing": "auto",
      "blockClass": "footer-2-desktop-1"
    }
  },
  "image#footer-facebook":{
    "props": {
      "src": "assets/Facebook.png",
      "alt": "Facebook",
      "link": {
        "openNewTab": true,
        "url": "https://www.facebook.com"
      }
    }
  },
  "image#footer-instagram":{
    "props": {
      "src": "assets/Instagram.png",
      "alt": "Instagram",
      "link": {
        "openNewTab": true,
        "url": "https://www.instagram.com"
      }
    }
  },
  "flex-layout.col#footer-2-desktop-2":{
    "children": [
      "rich-text#title-footer-2",
      "vtex.menu@2.x:menu#ajuda"
    ],
    "props": {
      "blockClass":"footer-2-desktop"
    }
  },
  "rich-text#title-footer-2":{
    "props": {
      "text": "Ajuda",
      "blockClass":"title-footer"
    }
  },
  "flex-layout.col#footer-2-desktop-3":{
    "children": [
      "rich-text#title-footer-3",
      "vtex.menu@2.x:menu#produtos"
    ],
    "props": {
      "blockClass":"footer-2-desktop"
    }
  },
  "rich-text#title-footer-3":{
    "props": {
      "text": "Produtos",
      "blockClass":"title-footer"
    }
  },
  "flex-layout.col#footer-2-desktop-4":{
    "children": [
      "rich-text#title-footer-4",
      "link#fone-footer",
      "link#e-mail-footer"
    ],
    "props": {
      "blockClass":"footer-2-desktop"
    }
  },
  "rich-text#title-footer-4":{
    "props": {
      "text": "Contato",
      "blockClass":"title-footer"
    }
  },
  "link#fone-footer":{
    "props": {
      "label": "(xx) 99999-9999",
      "href": "https://api.whatsapp.com/send?phone=5511999999999",
      "target": "_blank",
      "blockClass":"link-footer"
    }
  },
  "link#e-mail-footer":{
    "props": {
      "label": "sac@summershop.com",
      "href": "mailto:sac@summershop.com",
      "target": "_blank",
      "blockClass":"link-footer"
    }
  },
  "flex-layout.col#footer-2-desktop-5":{
    "children": [
      "rich-text#title-footer-5",
      "image#payments"
    ],
    "props": {
      "blockClass":"footer-2-desktop"
    }
  },
  "rich-text#title-footer-5":{
    "props": {
      "text": "Pagamento",
      "blockClass":"title-footer"
    }
  },
  "image#payments":{
    "props": {
      "src": "assets/payment.png",
      "alt": "Payment",
      "blockClass":"footer-payment"
    }
  },
  "flex-layout.col#footer-2-desktop-6":{
    "children": [
      "rich-text#title-footer-6",
      "flex-layout.row#footer-2-desktop-6"
    ],
    "props": {
      "blockClass":"footer-2-desktop",
      "width":"12%"
    }
  },
  "rich-text#title-footer-6":{
    "props": {
      "text": "Segurança",
      "blockClass":"title-footer"
    }
  },
  "flex-layout.row#footer-2-desktop-6":{
    "children": [
      "image#footer-image-1",
      "image#footer-image-2",
      "image#footer-image-3"
    ],
    "props": {
      "blockClass": "footer-2-desktop-6",
      "colSizing": "auto"
    }
  },
  "image#footer-image-1":{
    "props": {
      "src": "assets/VTEX_logo.png",
      "alt": "VTEX",
      "link": {
        "openNewTab": true,
        "url": "#"
      }
    }
  },
  "image#footer-image-2":{
    "props": {
      "src": "assets/lets-encrypt.png",
      "alt": "Let's Encrypt",
      "link": {
        "openNewTab": true,
        "url": "#"
      }
    }
  },
  "image#footer-image-3":{
    "props": {
      "src": "assets/google.png",
      "alt": "Google Safe Browsing",
      "link": {
        "openNewTab": true,
        "url": "#"
      }
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer-3-desktop"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer-3-desktop": {
    "props": {
      "text": "2022 © CodeBlue. Todos os direitos reservados.",
      "blockClass": "credits"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-mobile",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-2-mobile": {
    "children": ["flex-layout.col#footer-2-mobile"],
    "props": {
      "blockClass": "footer-2-mobile"
    }
  },
  "flex-layout.col#footer-2-mobile": {
    "children": [
      "vtex.menu@2.x:menu#footer-mobile"
    ],
    "props": {
      "blockClass": "footer-2-mobile"
    }
  }
}
